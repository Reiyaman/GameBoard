<section style="text-align:center">
    <form  action = "/sign_in" method = "post">
        <div>
            <div>
                <h1>ログイン</h1>
                <%= @miss %><br>
                <b>ユーザー名</b><br>
                <input  name = "name" placeholder = "名前を入力" required><br>
                <b>パスワード</b><br>
                <input  name = "password" type = "password" placeholder = "パスワードを入力" required><br>
            </div><br>
            <div>
                <button type = "submit" value = "ログイン">
                    <i class="fas fa-sign-in-alt fa-3x posicolor"></i>
                </button>
            </div>
        </div>
    </form>
</section>