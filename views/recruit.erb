<section style="text-align:center">
    <h1>投稿フォーム</h1>
    <form action = "/post/board" method = "post">
        機種選択
        <select name = "platform">
            <% Model.all.each do |modellist| %>
                <option value = "<%= modellist.id %>"><%= modellist.platform %></option>
            <% end %>
        </select><br>
        ゲームタイトル
        <input type = "text" name = "gamename" placeholder = "タイトル名" required>
        </input><br>
        カテゴリー
        <select name = "purpose">
            <% Category.all.each do |categorylist| %>
                <option value = "<%= categorylist.id %>"><%= categorylist.purpose %></option>
            <% end %>
        </select><br>
        募集人数
        <input type = "number" name = "applicant" id = "applinum" min = "1" required><br>
        投稿内容<br>
        <textarea name = "article" rows = "5" cols = "40" placeholder = "200字以内"></textarea><br>
        <button type = "submit" value = "投稿する！">
            <i class="fas fa-paper-plane fa-2x buttoncolor"></i>
            投稿
        </button>
        
        <script>
            $(function(){ <%# 0より下の数を入力できないようにする %>
                $('#applinum').on('mouseup keyup', function(e){
                var appli = parseInt($(this).val());
                var appliMin = parseInt($(this).attr('min'));
                if(appli < appliMin){ $(this).val(appliMin); }
                 });
            });
        </script>
</section>