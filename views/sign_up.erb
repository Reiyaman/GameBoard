<section>
	<h1>新規登録</h1>
	<form action = "/sign_up" method = "post" enctype = "multipart/form-data">
		<b>ユーザー名</b><br>
	    <input type = "text" name = "name" placeholder = "ユーザー名"><br>
	    <b>パスワード</b><br>
	    <input type = "password" name = "password" placeholder = "パスワード"><br>
	    <input type = "password" name = "password_confirmation", placeholder = "もう一度パスワードを入力"><br>
	    <b>プロフィール画像</b><br>
	    <input type = "file" name = "profile"><br>
	    <input type = "submit" value = "新規登録">
	</form>
</section>